{
  "schemas": {
    "version": "1.0.0",
    "configure": {
      "default-options": {
        "title": "Default Options",
        "type" : "object",
        "properties" : {
          "options": {
            "type" : "object",
            "properties" : {}
          }
        }
      },
      "advanced-options": {
        "title": "Advanced Options",
        "type" : "object",
        "properties" : {
          "options": {
            "type" : "object",
            "properties" : {
              "ipAddress" : {
                "title": "Bridge IP Address",
                "type" : "string"
              },
              "apiUsername": {
                "title": "API Username",
                "type": "string",
                "default": "octoblu"
              }
            }
          }
        },
        "required": ["options"]
      }
    },
    "message": {
      "configure-light": {
        "title": "Configure Light",
        "type": "object",
        "properties": {
          "lightNumber": {
            "title": "Light Number",
            "type": "number"
          },
          "useGroup": {
            "title": "Use Light Group",
            "type": "boolean",
            "default": false
          },
          "on": {
            "title": "Light On",
            "type": "string",
            "default": true
          },
          "transitiontime": {
            "title": "Transition Time",
            "type": "number"
          },
          "alert": {
            "title": "Alert Effect",
            "type": "string",
            "enum": [
              "select"
            ]
          },
          "effect": {
            "title": "Dynamic Effect",
            "type": "string",
            "default": "none",
            "enum": [
              "none",
              "colorloop"
            ]
          }
        },
        "required": ["lightNumber", "on", "color"]
      }
    }
  }
}
